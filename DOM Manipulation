//11
const ol = document.querySelector('ol');
const olLi = ol.children;
function changeListGreen(list){
    for(let i = 0; i < list.length; i++){
        list[i].classList.toggle('green');
    }
}
changeListGreen(olLi);
//12
document.querySelector('body').querySelector('.footer').remove('.footer');
